{
  "name": "i18n-json-translator",
  "version": "1.0.0",
  "description": "A tool for translating JSON files with nested Chinese values into multiple languages using AI",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:custom": "./scripts/run-test.sh",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepare": "husky install",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "cli": "node dist/cli.js"
  },
  "keywords": [
    "i18n",
    "translation",
    "json",
    "openai",
    "claude",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/i18n-json-translator.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/i18n-json-translator/issues"
  },
  "homepage": "https://github.com/yourusername/i18n-json-translator#readme",
  "bin": {
    "i18n-json-translator": "./dist/cli.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.16.0",
    "chalk": "^5.4.1",
    "commander": "^11.0.0",
    "dotenv": "^16.0.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
